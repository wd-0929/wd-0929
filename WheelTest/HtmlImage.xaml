<Window x:Class="WheelTest.HtmlImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTest"
        mc:Ignorable="d"
        x:Name="_root"
        Title="HtmlImage" Height="450" Width="800">
    <Grid  MinHeight="160">
        <Image  Source="{Binding HtmlStringImage ,ElementName=_root}"
                Height="{Binding ImageHeight,ElementName=_root}" />
    </Grid>
</Window>

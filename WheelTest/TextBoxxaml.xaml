<Window x:Class="WheelTest.TextBoxxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTest"
        mc:Ignorable="d"
        Title="TextBoxxaml" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Stretch"
                 Grid.Column="3"
                 Margin="0,0,14,0"
                 MaxLength="50"
                 PreviewTextInput="txtOnlyNumbers_PreviewTextInput"
                  PreviewKeyDown="txtOnlyNumbers_PreviewKeyDown"
                 VerticalAlignment="Center" />
    </Grid>
</Window>

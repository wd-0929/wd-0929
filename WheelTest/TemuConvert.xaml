<Window x:Class="WheelTest.TemuConvert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTest"
        mc:Ignorable="d"
        Title="TemuConvert"
        Height="450"
        Width="800">
    <StackPanel Margin="5">
        <TextBox Height="105"
                 AcceptsReturn="True"
                 x:Name="textbox"
                 TextWrapping="WrapWithOverflow" />
        <StackPanel Orientation="Horizontal">
            <Button  Content="生成"
                     Margin="0,5"
                     Click="Button_Click"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left" />
            <TextBlock Margin="5,0" Text="每行个数：" VerticalAlignment="Center"/>
            <TextBox x:Name="_index"
                     Margin="5,0"
                     VerticalAlignment="Center" Width="50" />
            <CheckBox IsChecked="True" x:Name="_CapitalizeFirstLetter" Content="字段名大写" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBox Height="105"
                 x:Name="textbox1"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 TextWrapping="WrapWithOverflow" />
    </StackPanel>
</Window>

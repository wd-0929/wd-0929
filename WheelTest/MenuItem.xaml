<Window x:Class="WheelTest.MenuItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTest"
        mc:Ignorable="d"
        Title="MenuItem" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type local:NewToolButton}">
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Template"
                    Value="{DynamicResource {ComponentResourceKey ResourceId=SubmenuHeaderTemplateKey, TypeInTargetAssembly={x:Type local:NewToolButton}}}" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="{ComponentResourceKey ResourceId=SubmenuHeaderTemplateKey, TypeInTargetAssembly={x:Type local:NewToolButton}}"
                         TargetType="{x:Type local:NewToolButton}">
            <Grid>
                <Border x:Name="Bd"
                        CornerRadius="3"
                        MinWidth="120"
                        Padding="0,3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Margin="5,0">
                            <ContentPresenter ContentSource="Header" />
                            <TextBlock x:Name="new"
                                       Text="NEW"
                                       Visibility="Collapsed"
                                       FontFamily="Tahoma"
                                       FontStyle="Italic"
                                       FontWeight="Bold"
                                       FontSize="8"
                                       TextOptions.TextFormattingMode="Display"
                                       Foreground="Red"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Top" />
                            <TextBlock x:Name="beta"
                                       Text="Beta"
                                       Visibility="Collapsed"
                                       FontFamily="Tahoma"
                                       FontStyle="Italic"
                                       FontWeight="Bold"
                                       FontSize="8"
                                       TextOptions.TextFormattingMode="Display"
                                       Foreground="Red"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Top" />
                        </StackPanel>
                        <Path Grid.Column="2"
                              Fill="{TemplateBinding Foreground}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="M 0,0 L 4,3.5 L 0,7 Z" />
                    </Grid>
                </Border>
                <Popup x:Name="popup"
                       Placement="Right"
                       IsOpen="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=IsSubmenuOpen,Mode=TwoWay}">
                    <Border BorderBrush="#d7d7d7"
                            BorderThickness="1"
                            Background="#EFEFEF">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="43"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Margin="5,0" >
                                <Grid>
                                    <TextBox VerticalAlignment="Center" />
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right"><Hyperlink TextDecorations="{x:Null}">搜索</Hyperlink></TextBlock>
                                </Grid>
                            </Border>
                            <Grid  Height="50" Grid.Row="1">
                                <Rectangle Margin="26,0,0,0"
                                           Fill="White" />
                                <ItemsPresenter Margin="1" />
                            </Grid>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Menu >
            <local:NewToolButton Header="测试">
                <MenuItem Header="测试5">
                    <MenuItem Header="测试5252"></MenuItem>
                </MenuItem>
                <MenuItem Header="测试51">
                    <MenuItem Header="测试5521"></MenuItem></MenuItem>
                <MenuItem Header="测试52">
                    <MenuItem Header="测试5521"></MenuItem></MenuItem>
                <MenuItem Header="测试53">
                    <MenuItem Header="测试5521"></MenuItem></MenuItem>
                <MenuItem Header="测试54">
                    <MenuItem Header="测试5512"></MenuItem></MenuItem>
                <MenuItem Header="测试55">
                    <MenuItem Header="测试5512"></MenuItem></MenuItem>
            </local:NewToolButton>
        </Menu>
        <StackPanel Orientation="Horizontal">
        </StackPanel>
        <Path x:Name="Arrow"
              Grid.Row="2"
              Data="M 0 0 L 3.5 4 L 7 0 Z"
              Fill="red"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0,2,0,0" />
    </Grid>
</Window>
